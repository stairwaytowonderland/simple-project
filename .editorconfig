# http://editorconfig.org
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = tab

[*.{yml,yaml,sh,tf,tfvars}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = off
indent_style = space
indent_size = 2

[*.py]
indent_style = space
max_line_length = 88
